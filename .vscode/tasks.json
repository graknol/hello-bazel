{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build everything",
            "type": "shell",
            "command": "bazel build ...",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run all tests",
            "type": "shell",
            "command": "bazel test ...",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "tests/factorial",
            "type": "shell",
            "command": "bazel test tests/factorial",
            "group": "test"
        }
    ]
}